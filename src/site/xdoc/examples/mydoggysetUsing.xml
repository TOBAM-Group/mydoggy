<!DOCTYPE document PUBLIC
        "-//Apache Software Foundation//DTD XDOC 1.0//EN"
        "http://maven.apache.org/dtd/xdoc_1_0.dtd">
<document>
    <properties>
        <title>MyDoggy - My Java Docking Framework (EXAMPLES) : MyDoggySet - Using</title>
        <author email="adecaro@users.sourceforge.net">Angelo De Caro</author>
    </properties>

    <body>
        <section name="MyDoggySet Using">
            <subsection name="To show tool window">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <img src="./../images/examples/toolwindowShow.png" alt="To show tool window" border="0" hspace="18"/>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <strong style="color:green">Right-click</strong> on the representative toolwindow button. Now you can choose :
                                        <ul>
                                           <li>
                                               <strong style="color:green">Show</strong><br/>
                                               The tool shows the component in a way that depends on tool window type and becomes visible.
                                           </li>
                                            <li>
                                                <strong style="color:green">Aggregate</strong><br/>
                                                Used to set to the true value the visible property of the tool.
                                                The tool becomes visible in a special way. In fact, if there is another tool visible
                                                with the same anchor then these two tools will be aggregate to be visible both.
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <strong style="color:green">Left-click</strong> on the representative toolwindow button.
                                        If you press <strong style="color:green">SHIFT</strong> during the click then
                                        if aggregateMode is disabled, aggregate method is used to show the tool else
                                        if aggregateMode is enabled then the aggregateMode is temporarily disabled just to make
                                        the tool visible without aggregation.
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </subsection>
            <subsection name="To hide a tool window">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <img src="./../images/examples/toolwindowHide.png" alt="To hide a tool window" border="0" hspace="18"/>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        Click
                                        <img src="./../images/examples/toolwindowHideButton.png" alt="Hide Button"/>
                                        button on the titlebar of the toolwindow to hide.
                                    </li>
                                    <li>
                                        Right-click on the representative toolwindow button and choose <strong style="color:green">Hide</strong> on the context menu.
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </subsection>
            <subsection name="To move a tool window">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <img src="./../images/examples/toolwindowMove.png" alt="To move a tool window" border="0" hspace="18"/>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        Right-click on the representative toolwindow button and choose <strong style="color:green">Move</strong> on the context menu.
                                        On the submenu, choose the destination anchor.
                                    </li>
                                    <li>
                                        Drag the representative toolwindow button or the titlebar to the new position. 
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </subsection>
            <subsection name="To change type of a tool window">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <img src="./../images/examples/toolwindowTypes.png" alt="To change type of a tool window" border="0" hspace="18"/>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        Click
                                        <img src="./../images/examples/toolwindowFloatingButton.png" alt="Floating Button"/>
                                        button on the titlebar of the toolwindow to set <code>ToolWindowType.FLOATING</code> type.
                                    </li>
                                    <li>
                                        Click
                                        <img src="./../images/examples/toolwindowSlidingButton.png" alt="Sliding Button"/>
                                        button on the titlebar of the toolwindow to set <code>ToolWindowType.SLIDING</code> type.
                                    </li>
                                    <li>
                                        Right-click on the representative toolwindow button and choose the mode.
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </subsection>
            <subsection name="To hide or detach a content">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <img src="./../images/examples/contentManager.png" alt="To hide or detach a content" border="0" hspace="18"/>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        Click
                                        <img src="./../images/examples/contentManagerContentClose.png" alt="Close Button"/>
                                        button to remove the content.
                                    </li>
                                    <li>
                                        Click
                                        <img src="./../images/examples/contentManagerContentDetach.png" alt="Detach Button"/>
                                        button to detach the content from the window.
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </subsection>
        </section>
    </body>
</document>
