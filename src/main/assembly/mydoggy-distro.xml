<assembly>
    <id>distro</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.noos.xing:mydoggy-examples</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.noos.xing:mydoggy-api</include>
                <include>org.noos.xing:mydoggy-plaf</include>
                <include>org.noos.xing:mydoggy-examples</include>
                <include>org.noos.xing:mydoggy-site-skin</include>
            </includes>
            <sources>
                <outputDirectory>${artifactId}</outputDirectory>
            </sources>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <fileSet>
            <directory>src</directory>
            <outputDirectory>src</outputDirectory>
            <includes/>
        </fileSet>

        <fileSet>
            <directory>license</directory>
            <outputDirectory>license</outputDirectory>
            <includes/>
        </fileSet>

        <fileSet>
            <directory>mydoggy-examples/src/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes/>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>TransparencyManager.dll</source>
            <outputDirectory>lib/win32</outputDirectory>
        </file>
        <file>
            <source>mydoggy-site.iml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>pom.xml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>README.txt</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>

</assembly>
