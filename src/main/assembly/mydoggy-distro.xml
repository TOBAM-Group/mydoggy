<assembly xmlns="http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">

    <id>beta1</id>

    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.noos.xing:mydoggy-api</include>
                <include>org.noos.xing:mydoggy-plaf</include>
                <include>org.noos.xing:mydoggy-res</include>
                <include>org.noos.xing:mydoggy-examples</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <moduleSet>
            <includes>
                <include>org.noos.xing:mydoggy-api</include>
                <include>org.noos.xing:mydoggy-plaf</include>
                <include>org.noos.xing:mydoggy-res</include>
                <include>org.noos.xing:mydoggy-examples</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <outputDirectory>src</outputDirectory>
                        <excludes>
                            <exclude>target/**</exclude>
                        </excludes>
                        <directory>src</directory>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>.</outputDirectory>
                        <includes>
                            <include>pom.xml</include>
                            <include>*.iml</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <fileSet>
            <directory>src</directory>
            <outputDirectory>src</outputDirectory>
            <includes/>
        </fileSet>

        <fileSet>
            <directory>license</directory>
            <outputDirectory>license</outputDirectory>
            <includes/>
        </fileSet>

        <fileSet>
            <directory>mydoggy-examples/src/script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes/>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>mydoggy.iml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>pom.xml</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>README.txt</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>./src/main/assembly/mydoggy-distro.xml</source>
            <outputDirectory>./src/main/assembly/</outputDirectory>
        </file>
    </files>

</assembly>
